<?xml version="1.0" encoding="UTF-8"?>

<blueprint  default-activation="eager" 
            xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <bean id="parser62" class="org.infinispan.configuration.parsing.Parser62"/>
    <service ref="parser62" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>
    <bean id="parser61" class="org.infinispan.configuration.parsing.Parser61"/>
    <service ref="parser61" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>
    <bean id="parser60" class="org.infinispan.configuration.parsing.Parser60"/>
    <service ref="parser60" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>

    <bean id="defaultMapReduceTaskLifecycle" class="org.infinispan.distexec.mapreduce.spi.DefaultMapReduceTaskLifecycle"/>
    <service ref="defaultMapReduceTaskLifecycle" interface="org.infinispan.distexec.mapreduce.spi.MapReduceTaskLifecycle"/>

    <bean id="defaultDistributedTaskLifecycle" class="org.infinispan.distexec.spi.DefaultDistributedTaskLifecycle"/>
    <service ref="defaultDistributedTaskLifecycle" interface="org.infinispan.distexec.spi.DistributedTaskLifecycle"/>

    <bean id="jdbcStoreConfigurationParser60" class="org.infinispan.persistence.jdbc.configuration.JdbcStoreConfigurationParser60"/>
    <service ref="jdbcStoreConfigurationParser60" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>
    
    <bean id="levelDBStoreConfigurationParser60" class="org.infinispan.persistence.leveldb.configuration.LevelDBStoreConfigurationParser60"/>
    <service ref="levelDBStoreConfigurationParser60" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>

    <bean id="remoteStoreConfigurationParser60" class="org.infinispan.persistence.remote.configuration.RemoteStoreConfigurationParser60"/>
    <service ref="remoteStoreConfigurationParser60" interface="org.infinispan.configuration.parsing.ConfigurationParser"/>
    
    <bean id="riverProviderDescriptor" class="org.jboss.marshalling.river.RiverProviderDescriptor"/>
    <service ref="riverProviderDescriptor" interface="org.jboss.marshalling.ProviderDescriptor"/>
    
    <bean id="serialProviderDescriptor" class="org.jboss.marshalling.serial.SerialProviderDescriptor"/>
    <service ref="serialProviderDescriptor" interface="org.jboss.marshalling.ProviderDescriptor"/>
  
</blueprint>
